        $('.movie').click(function (e) {
            e.preventDefault();

            // Open Modal
            $('.modal').addClass('is-active');

            // Set filename on title
            $('.modal-card-title').html($(this).attr('data-movie-name'))

            // Set filename on inputs
            $('#currentName').val($(this).attr('data-movie-name'))
